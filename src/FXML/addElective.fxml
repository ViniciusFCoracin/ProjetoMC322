<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane hgap="10" vgap="10" fx:controller="src.GraphicInterface.Controllers.AddElectiveController" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
   <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
         
   <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
   <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
   <Label text="Número de Créditos:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
   <TextField fx:id="creditsField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
         
   <Label text="Tipo de Local Requerido:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
   <TextField fx:id="locationTypeField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
   <Label text="Instituto Requerido:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
   <TextField fx:id="instituteField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
         
   <Label text="Lista de Professores:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
   <TextField fx:id="professorsField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

   <Button text="Cancelar" onAction="#handleCancel" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
   <Button text="Confirmar" onAction="#handleOk" GridPane.rowIndex="6"/>
</GridPane>
